@import './shared/mixins.styl';

html {
  -webkit-box-sizing: border-box;
  -moz-box-sizing: border-box;
  box-sizing: border-box;
  height: 100%;
}

*, *:before, *:after {
  -webkit-box-sizing: inherit;
  -moz-box-sizing: inherit;
  box-sizing: inherit;
}

body {
  font-size: 16px;
  color: $font-dark-blue;
  margin: 0;
  background: #f0f0f1;
  padding-bottom: 11em;
  position: relative;
  min-height: 100%;
}

body, button, ul, li, a, p {
  font-family: 'Roboto', sans-serif;
}

h1, h2, h3, h4, h5 {
  font-family: 'Bebas', sans-serif;
  letter-spacing: 0.025em;
}

h1,h2 {
  text-transform: uppercase;
}

h1 {
  font-size: 3em;
}

ul, li {
  padding-left: 0;
  list-style-type: none;
}

hr {
  border: 0;
  height: 1px;
  background-color: #f0f0f1;
  margin-bottom: 5em;
}

header, footer {
  text-align: center;
  text-transform: uppercase;
}

footer {
  position: absolute;
  bottom: 0px;
}

form {
  overflow: hidden;
  margin: 0.75em;
}

label {
  display: block;
  margin: 5px 0px;
}

button:focus {
  outline:0;
}

.next, .undo {
  padding: 0px 13px;
}
.next {
  border-left: 1px solid #333;
  float: right;
}

.undo {
  border-right: 1px solid #333;
  float: left;
  width: 30px;
  text-indent: -999em;
  background: no-repeat url('data:image/png;base64,');
}

.wrapper {
  margin: auto;
  background-color: $gray-1;
  overflow: auto;
  padding: .75em;
}

@media only screen and (max-width: 30em) {
  .wrapper {
    padding: 0em;
  }
}

@media only screen and (min-width: 33em) {

  .wrapper {
    padding: 3em;
  }
}

.mainContainer {
  position: relative;
  max-width: 500px;
  margin: auto;
}

@media only screen and (min-width: 45em) {

  .mainContainer {
    max-width: 1000px;
    margin: auto;
    padding: 0 .75em;
  }
}

@media only screen and (min-width: 63em) {

  h1 {
    font-size: 4em;
  }

  h2 {
    font-size: 2em;
  }

  h3 {
    font-size: 1.25em;
  }
}
